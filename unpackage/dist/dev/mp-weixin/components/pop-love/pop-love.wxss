.picker {
  position: fixed;
  bottom: 50px;
}
.textarea {
  overflow: auto;
}
.popup-content {
  margin: 0 20px;
  padding: 20px;
  background-color: #FFF;
  border-radius: 20px;
}
.popup-content .submit {
  margin-top: 10px;
}
.popup-content .pop-title {
  text-align: center;
  margin-bottom: 10px;
  font-weight: bold;
  font-size: 20px;
}
.popup-content .slotbox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.popup-content .slotbox input {
  font-size: 14px;
}
.popup-content .slotbox .title {
  margin-right: 15px;
  font-weight: bold;
  font-size: 16px;
  white-space: nowrap;
}
.popup-content .slotbox .date-text,
.popup-content .slotbox .classify-text,
.popup-content .slotbox .region-text {
  color: #007aff;
  font-size: 16px;
  width: 150px;
}

